<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Audiobookplayer.ViewModels"
             xmlns:controls="clr-namespace:Audiobookplayer.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Audiobookplayer.Pages.PlayerPage"
             x:Name="root">
    <ContentPage.BindingContext>
        <viewmodels:PlayerViewModel x:Name="PlayerVM" />
    </ContentPage.BindingContext>
    <Grid
        Padding="20, 0, 20, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border 
            StrokeShape="RoundRectangle 10, 10, 10, 10"
            
            Grid.Row="1"            
            VerticalOptions="Fill" 
            WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}"
            >
            <Image   
                Aspect="AspectFill"
                Source="{Binding CoverImage}" />
        </Border>
        <VerticalStackLayout
            Grid.Row="0"
            >
            <Label 
                Text="{Binding BookTitle}"
                FontAttributes="Bold"
                FontSize="20"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Row="2"
            VerticalOptions="Center"
            Spacing="20"
            >
            <controls:AudioSeekbar
                Position="{Binding Position, Mode=TwoWay}"
                DragCompleteCommand="{Binding DragCompleteCommand}"
                DragStartCommand="{Binding DragStartCommand}"
                />
            
            <Grid
                ColumnSpacing="10"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <ImageButton
                    Grid.Column="0"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Source="fastforward.png"
                    Command="{Binding DoubleSpeedCommand}"
                    Scale="0.6"
                    WidthRequest="80"
                    HeightRequest="40"
                    CornerRadius="25"
                    >
                    <ImageButton.Triggers>
                        <DataTrigger
                            TargetType="ImageButton"
                            Binding="{Binding IsDoubleSpeed}"
                            Value="False">
                            <Setter 
                                Property="BackgroundColor"
                                Value="White"/>
                        </DataTrigger>
                        <DataTrigger
                            TargetType="ImageButton"
                            Binding="{Binding IsDoubleSpeed}"
                            Value="True">
                            <Setter 
                                Property="BackgroundColor"
                                Value="LightGray"/>
                        </DataTrigger>
                    </ImageButton.Triggers>
                </ImageButton>
                <ImageButton
                    Grid.Column="1"
                    CornerRadius="50"
                    Padding="10"
                    VerticalOptions="Center"
                    Source="{Binding PlayPauseIcon}"
                    Scale="1"
                    WidthRequest="60"
                    HeightRequest="60"
                    >
                    
                    <ImageButton.Behaviors>
                        <toolkit:TouchBehavior
                            Command="{Binding PausePlayCommand, Source={x:Reference PlayerVM}}"
                            PressedBackgroundColor="LightGray"
                            DefaultBackgroundColor="White"
                            />
                    </ImageButton.Behaviors>
                </ImageButton>
            </Grid>
        </VerticalStackLayout>
    </Grid>

</ContentPage>