<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Audiobookplayer.ViewModels"
             xmlns:controls="clr-namespace:Audiobookplayer.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Audiobookplayer.Pages.PlayerPage"
             x:Name="root">
    <ContentPage.BindingContext>
        <viewmodels:PlayerViewModel x:Name="PlayerVM" />
    </ContentPage.BindingContext>

    <Grid>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            IsVisible="{Binding BookSelected, Converter={toolkit:InvertedBoolConverter}}">
            <Label Text="No audiobook selected" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
            <Label Text="Please select an audiobook from your library" 
                           FontSize="16" 
                           HorizontalOptions="Center" />
        </VerticalStackLayout>

        <Grid
        IsVisible="{Binding BookSelected}"
        Padding="20, 0, 20, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border 
            StrokeShape="RoundRectangle 10, 10, 10, 10"
            
            Grid.Row="1"            
            VerticalOptions="Fill" 
            WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}"
            >
                <Image   
                Aspect="AspectFill"
                Source="{Binding CoverImage}" />
            </Border>
            <VerticalStackLayout
            Grid.Row="0"
            >
                <Label 
                Text="{Binding BookTitle}"
                FontAttributes="Bold"
                FontSize="20"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            </VerticalStackLayout>
            <VerticalStackLayout
            Grid.Row="2"
            VerticalOptions="Center"
            Spacing="20"
            >
                <controls:AudioSeekbar
                Position="{Binding Position, Mode=TwoWay}"
                Duration="{Binding Duration}"
                DragCompleteCommand="{Binding DragCompleteCommand}"
                DragStartCommand="{Binding DragStartCommand}"
                />

                <Grid
                ColumnSpacing="10"
                >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!-- pause/play button -->
                    <ImageButton
                    Grid.Column="1"
                    CornerRadius="50"
                    Padding="10"
                    VerticalOptions="Center"
                    Source="{Binding PlayPauseIcon}"
                    Scale="1"
                    WidthRequest="60"
                    HeightRequest="60"
                    >
                        <ImageButton.Behaviors>
                            <toolkit:TouchBehavior
                            Command="{Binding PausePlayCommand, Source={x:Reference PlayerVM}}"
                            PressedBackgroundColor="LightGray"
                            DefaultBackgroundColor="White"
                            />
                        </ImageButton.Behaviors>
                    </ImageButton>

                    <!-- 2x speed button -->
                    <Button
                    BorderColor="Black"
                    BorderWidth="1"
                    Grid.Column="2"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Text="2x"
                    TextColor="Black"
                    Command="{Binding DoubleSpeedCommand}"
                    Scale="1.5"
                    FontAttributes="Bold"
                    Padding="20, 0, 20, 0"
                    HeightRequest="10"
                    CornerRadius="25"
                    >
                        <Button.Triggers>
                            <DataTrigger
                            TargetType="Button"
                            Binding="{Binding IsDoubleSpeed}"
                            Value="False">
                                <Setter 
                                Property="BackgroundColor"
                                Value="White"/>
                            </DataTrigger>
                            <DataTrigger
                            TargetType="Button"
                            Binding="{Binding IsDoubleSpeed}"
                            Value="True">
                                <Setter 
                                Property="BackgroundColor"
                                Value="LightGray"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <!-- rewind 10 sec button -->
                    <ImageButton
                    Grid.Column="0"
                    CornerRadius="50"
                    Padding="10"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Source="skipbackward.png"
                    Scale="1"
                    WidthRequest="45"
                    HeightRequest="45"
                    >
                        <ImageButton.Behaviors>
                            <toolkit:TouchBehavior
                            Command="{Binding SkipBackwardCommand, Source={x:Reference PlayerVM}}"
                            PressedBackgroundColor="LightGray"
                            DefaultBackgroundColor="White"
                            />
                        </ImageButton.Behaviors>
                    </ImageButton>

                    <!-- forward 10 sec button -->
                    <ImageButton
                    Grid.Column="2"
                    CornerRadius="50"
                    Padding="10"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Source="skipforward.png"
                    Scale="1"
                    WidthRequest="45"
                    HeightRequest="45"
                    >
                        <ImageButton.Behaviors>
                            <toolkit:TouchBehavior
                            Command="{Binding SkipForwardCommand, Source={x:Reference PlayerVM}}"
                            PressedBackgroundColor="LightGray"
                            DefaultBackgroundColor="White"
                            />
                        </ImageButton.Behaviors>
                    </ImageButton>
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </Grid>

</ContentPage>